record (bo, "$(PS):setRemote")
{
	field (DESC, "Set Remote Mode")
	field (SCAN, "Passive")
	field (DTYP, "stream")
	field (OUT, "@common.proto setRemote $(port)")
}

record(bo, "$(PS):remoteMode")
{
    field(DESC, "Remote(0) / Local(1) mode control")
    field(ZNAM, "Remote")
    field(ONAM, "Local")
    field(SCAN, "Passive")
    field(DTYP, "stream")
    field(OUT, "@common.proto setRemoteMode $(port)")
    field(FLNK, "$(PS):getRemote")
}

